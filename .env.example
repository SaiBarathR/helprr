# Copy this file to .env.local for local dev (or set as real env vars in Docker/production)

# --- Required ---
# Prisma/Postgres connection string (replace password-add-here with your password)
DATABASE_URL=postgresql://postgres:password-add-here@localhost:5432/helprr

# Redis connection string (required for login rate limiting)
REDIS_URL="redis://helprr-redis:6379"

# For docker-compose (optional; only used if you keep the default DATABASE_URL in docker-compose.yml)
POSTGRES_PASSWORD=postgres

# App login password (shared)
APP_PASSWORD=change-me
TZ=Asia/Kolkata

# Secret used to sign the session cookie (set a strong random value in production)
JWT_SECRET=change-me-too


# --- Optional: Web Push (enables push notifications) ---
# Generate with: npx web-push generate-vapid-keys
VAPID_SUBJECT=mailto:you@example.com
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=


# --- Optional: server-side media cache (seconds) ---
# Directory used for image byte cache
IMAGE_CACHE_DIR=/tmp/helprr-image-cache
# Freshness window for cached images 7 days
IMAGE_CACHE_TTL_SECONDS=604800
# Stale-if-error window for cached images # 30 days
IMAGE_CACHE_STALE_SECONDS=2592000 
# Optional TMDB cache tuning
# 1 day
TMDB_CACHE_DISCOVER_TTL_SECONDS=86400 
TMDB_CACHE_DETAILS_TTL_SECONDS=86400 
# 7 days
TMDB_CACHE_STATIC_TTL_SECONDS=604800 
# 30 days
TMDB_CACHE_STALE_SECONDS=2592000 
